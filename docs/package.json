{
  "private": true,
  "devDependencies": {
    "@redocly/cli": "^1.19.0",
    "@asyncapi/cli": "^2.17.0",
    "rimraf": "^6.0.1"
  },
  "scripts": {
    "check:ws": "asyncapi validate ./asyncapi.yaml",
    "build:rest": "redocly build-docs ./openapi.yaml -o ./index.html",
    "build:ws": "rimraf ./asyncapi && asyncapi generate fromTemplate ./asyncapi.yaml @asyncapi/html-template -o ./asyncapi --force-write",
    "build": "npm run check:ws && npm run build:rest && npm run build:ws"
  }
}
